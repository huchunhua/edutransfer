h1,h2,h3,h4,h5,h6{
    font-weight: 300;
}
h3,h4{
    margin-bottom: 30px;
}
.cont_intro{
	width: 80%;
    margin: 0 10%;
    background-color: #fff;
}
.hd_img{
	display: block;
    width: 100%;
}
.hd_img>img{
	width: 100%;
    /*height: 400px;*/
}
.intro_content{
    height: 100%;
    padding: 80px 0 70px;
    margin: 0 auto;
}
.left{
	float: left;
    width: 55%;
}
.left img{
    width: 100%;
    margin: 20px 0;
}
.intro_content>div>p{
	font-size: 14px;
    font-family: "Microsoft YaHei";
}
.left>p, .right>p{
	font: normal 14px/25px "Microsoft YaHei";
    color: #484848;
}
.right{
	float: right;
    width: 25%;
}
.right>h4{
	font: bold 20px/60px "Microsoft YaHei";
}
.clearfix{
	clear:both;
}
.pay_btn{
	height: 40px;
    -webkit-border-radius: 0 3px 3px 0;
    -moz-border-radius: 0 3px 3px 0;
    border-radius: 0 3px 3px 0;
}
.chart .start_btn{
    width: 55%;
}
.start_btn .teacher-enter{
    margin-left: 20px;
    text-transform: none;
    float: right;
}
.bimg{
    position: fixed;
    width: 70%;
    top:70px;
    display: none;
}
.bimg img{
    width: 100%;
}
.left .tips{
    width: 600px;
    color: rgb(240,90,36);
    font-size: 14px;
}