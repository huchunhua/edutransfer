html{
	height: 800px;
	overflow-y: hidden;
}
body{
	background-image: url('../img/teacher_bg.jpg');
    font-family: "josefin slab", serif;
    color: #278389;
    height: 800px;
    background-repeat: no-repeat;
    background-size: 100% 800px;
}
.head{
	width: 100%;
	height: 54px;
	background-color: rgba(255, 255, 255, 0.84);
	padding-top: 17px;
	color: #888888;
}
.head p {
	width: 980px;
	height: 20px;
	margin:0 auto;
	text-align:center;
	font-weight: bold;
}
.title{
	width: 1009px;
	height: 180px;
	margin: 0 auto;
	color: rgb(39, 131, 137);
	background-color: rgb(0,0,0);
	text-align: center;
	position: relative;
}
.title h2{
	font-size: 46px;
	font-weight: bold;
	height: 180px;
	line-height: 180px;
	margin-top: 0;
	margin-bottom: 0;
	font-family: "josefin slab", serif;
}
.title .l{
	width: 18px;
	height: 36px;
	background-image: url('../img/left.png');
	background-repeat: no-repeat;
    border-right-width: 0;
    position: absolute;
    top:180px;
    left:0;
}
.title .r{
	width: 18px;
	height: 36px;
	background-image: url('../img/right.png');
	background-repeat: no-repeat;
    border-right-width: 0;
    position: absolute;
    top:180px;
    right: 0;
}
/*内容*/
.content{
	width:1009px;
	margin:0 auto;
	position: relative;
}
.content>div{
	height: 416px;
	background-color: rgba(255, 255, 255, 0.89);
	position: absolute;
}
.ban{
	width: 530px;	
	left:14px;
}
.form_wrap{
	width: 435px;
	right: 14px;
}
.img_wrap{
	margin:18px auto;
	width: 496px;
	height: 377px;
	border:2px solid rgba(39, 131, 137, 1);
	overflow-x: hidden;
	overflow-y: hidden;
	position: relative;
}
.img_wrap .imggroup{
	width: 1488px;
	position: absolute;
	left:0;
}
.img_wrap img{
	float: left;
	width: 496px;
	height: 377px;
}
.ban span{
	position: absolute;
	top:200px;
	width: 445px;
	height: 108px;
	line-height: 40px;
	background-color: rgba(255, 255, 255, 0.89);
	z-index: 50;
	padding: 15px 6px 13px 44px;
	font-size:40px;
}
/*表单*/
.tips{
	margin: 30px auto 0;
	width: 350px;
	height: 68px;
	text-align: center;
	font-size: 23px;
	font-family: "Times New Roman", times, serif;
	line-height: 1.3em;
}
.tips p{
	font-size: 30px;
	color:#000000;
	font-family: "Josefin Slab", serif;
	font-weight: bold;
}
form{
	width: 390px;
	height: 190px;
	margin:60px auto 10px;
	position: relative;
}
form li{
	list-style: none;
	position: absolute;
}
form li.left{
	left: 0;
}
form li.right{
	right: 0;
}
li.left input{
	width: 195px;
	height: 28px;
	border: 1px solid rgb(107, 163, 167);
	padding: 5px;
	margin-bottom: 5px;
}
li.right textarea{
	width: 190px;
	height: 94px;
	border: 1px solid rgb(107, 163, 167);
	vertical-align: top;
	resize: none;
	padding:5px;
}
.send{
	position: absolute;
	right: 0;
	top:100px;
	color: #FFFFFF;
    cursor: pointer;
    font-size: 18px;
    font-family: "Times New Roman", times, serif;
    padding:5px;
	background-color: rgb(107, 163, 167);
	border:none;
}
.visit{
	position: relative;
	top:140px;
	left:102px;
	width: 185px;
	height: 45px;
	color: #fff;
	font-family: "Noticia Text", serif;
	background-color: rgba(39, 131, 137, 1);
    border: solid rgba(73, 73, 73, 1) 1px;
    cursor: pointer !important;

}
.visit:hover{
	color: rgb(0,0,0);
	background-color: rgb(107, 163, 167);
	border: solid #fff 1px;
}
/*链接*/
.link{
	width: 120px;
	margin:0 auto;
}
.link>div{
	width: 40px;
	float: left;
}
.link img{
	width: 32px;
	height: 32px;
	border-radius: 32px;
}
/*使用说明*/
.use{
	width: 980px;
	height: 100px;
	margin: 450px auto;
	background-color: rgba(255, 255, 255, 0.89);
	font-family: "Noticia Text", serif;
    color: #494949;
    font-weight: bold;
}
.use .text_wrap{
	width: 700px;
	height: 20px;
	margin:0 auto;
	padding: 40px 0;
}
.text_wrap span{
	text-decoration: underline;
	margin-right: 20px;
}
/*轮播图*/
/*  修改输出屏大小  */
.banner{
	/*  修改输出屏大小  */ 
	width: 496px;
	height: 377px;
 	overflow: hidden;
  	position: relative; 
  	margin-left: auto; 
  	margin-right: auto;
  	margin: 18px auto;
    border: 2px solid rgba(39, 131, 137, 1); 
}
.banner .img{
	width: 99999px; 
	position:absolute; 
	left:0px; top:0;
	padding:0;
}
.banner .img li{ 
	float:left;
}
/*/ 修改图片大小 /*/
.banner .img img{ 
	width: 496px;
}
/*/ 小圆圈 /*/
.banner .num{ 
	position:absolute; 
	width:100%; bottom:10px; 
	left:0; 
	text-align:center; 
	font-size:0px;
}
.banner .num li{ 
	width:10px;
	height:10px; 
	background:#888; 
	border-radius:50%; 
	display:inline-block; 
	margin:0 3px; 
	cursor:pointer;
}
.banner .num li.on{ 
	background:#F60;
}
/*/ 按钮 /*/
.banner .btn{ 
	width:30px; 
	height:50px; 
	background:rgba(0,0,0,0.5); 
	position:absolute; top:50%; 
	margin-top:-25px; 
	cursor:pointer; 
	text-align:center; 
	line-height:50px; 
	color:#fff; 
	font-size:40px; 
	font-family:"宋体"; 
	display:none;
}
.banner:hover .btn{ 
	display:block;
}
.banner .btn_l{ 
	left:0;
}
.banner .btn_r{ 
	right:0;
}
#ban1 .banner .img img{
	width: 496px;
	height:377px;
}